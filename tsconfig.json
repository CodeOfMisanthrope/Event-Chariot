{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES2022",
    "module": "ES2022",
    "lib": [
      "Decorators"
    ],
    "allowJs": true,
    "noImplicitAny": true,
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "strictNullChecks": false,
    "strictFunctionTypes": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "paths": {
      "~handler/*": [
        "src/handler/*"
      ],
      "~store/*": [
        "src/store/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts"
  ]
}
